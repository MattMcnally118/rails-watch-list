<div class="list-background">
<div class="container">
<h2 class="text-center"><%= @list.name %></h2>

<div class="movie-container">


<% @bookmarks.each do |bookmark| %>
  <div class="movie-card">
    <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: bookmark.movie.title %>
    <%= link_to "Ã—", list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete-x", title: "Remove bookmark" %>
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <span class="badge bg-primary"><%= bookmark.movie.rating %></span>
      </div>
      <p class="card-text"><%= truncate(bookmark.movie.overview, length: 100) %></p>
    </div>
  </div>
<% end %>

</div>

<%= link_to 'Add Movie', new_list_bookmark_path(@list), class: "btn-outline my-2 my-sm-0"%>
</div>

</div>
