 <div class="lists-background">


  <div class="lists-card text-center">
    <h2 class="mb-4">My Lists</h2>

    <% @lists.each do |list| %>
      <div class="lists-card-item mb-3">
        <%= link_to list.name, list_path(list), class: "text-white h5 text-decoration-none" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= link_to 'Add New List', new_list_path, class: 'btn-blue mx-2' %>
    </div>
  </div>

  <div class="floating-header">
    <h1 class="display-4">Organize your Movies</h1>
  </div>


</div>
