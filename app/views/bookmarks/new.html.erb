<div class="container py-4">
  <h2>Add a Movie to <%= @list.name %></h2>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :movie_id, collection: Movie.all, prompt: 'Choose a movie', label: 'Select Movie' %>

    <%= f.input :comment, as: :text, input_html: { rows: 3 }, label: 'Comment (optional)' %>

    <%= f.button :submit, 'Add Movie', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back to List', list_path(@list), class: 'btn btn-secondary mt-3' %>
</div>
